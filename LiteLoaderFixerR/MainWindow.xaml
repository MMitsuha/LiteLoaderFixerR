<Window x:Class="LiteLoaderFixerR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiteLoaderFixerR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="QQ 路径：" HorizontalAlignment="Left" Margin="70,60,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:Name="QQPath" HorizontalAlignment="Left" Margin="195,60,0,0" VerticalAlignment="Top" Width="425" Height="35" FontSize="20" Text="" TextWrapping="Wrap" TextChanged="QQPath_TextChanged" />
        <Button Content="浏览" HorizontalAlignment="Left" Margin="680,60,0,0" VerticalAlignment="Top" Height="35" Width="65" FontSize="18" Click="Button_Click" />
        <Label Content="QQ 版本：" HorizontalAlignment="Left" Margin="70,125,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:Name="QQVersion" HorizontalAlignment="Left" Margin="195,125,0,0" VerticalAlignment="Top" Width="425" Height="35" FontSize="20" Text="" TextWrapping="Wrap" IsReadOnly="True" />
        <Button x:Name="FixQQ" Content="修复QQ" HorizontalAlignment="Left" Margin="570,320,0,0" VerticalAlignment="Top" Height="65" Width="175" FontSize="24" />
    </Grid>
</Window>